%h1 Products in #{@category.name} category
%table.table
  %thead
    %tr
      %th Name
      %th Slug
      %th Action
  %tbody
    - if @products.any?
      - @products.each do |product|
        %tr
          %td= product.name
          %td= product.slug
          %td
            = link_to fa_icon('eye'), private_product_path(product)
            = link_to fa_icon('pencil'), edit_private_product_path(product)
            = link_to fa_icon('trash'), private_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }
    - else
      %p No Products
%br/
.nav
  = link_to 'New Product', new_private_category_product_path, class: "nav-link"
  = link_to 'Back to categories',  private_categories_path, class: "nav-link"
